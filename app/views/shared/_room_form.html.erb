<div class="flex items-center justify-center min-h-screen">
  <div class="w-full max-w-2xl p-6 bg-white rounded-lg shadow-md border border-gray-200">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">施設情報の登録・編集</h1>

    <%= form_with model: @room, local: true, class: "space-y-4" do |form| %>

      <!-- 部屋名の入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :name, "部屋名", class: "label" %>
          <% if @room.errors[:name].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @room.errors[:name].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.text_field :name, class: "input input-bordered w-full" %>
      </div>

            <!-- 説明の入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :description, "説明", class: "label" %>
          <% if @room.errors[:description].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @room.errors[:description].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.text_area :description, rows: 5, class: "textarea textarea-bordered w-full" %>
      </div>

      <!-- 住所の入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :address, "住所", class: "label" %>
          <% if @room.errors[:address].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @room.errors[:address].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.text_field :address, class: "input input-bordered w-full" %>
      </div>

      <!-- 価格の入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :price_per_night, "1泊あたりの価格", class: "label" %>
          <% if @room.errors[:price_per_night].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @room.errors[:price_per_night].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.number_field :price_per_night, class: "input input-bordered w-full", min: 1 %>
      </div>

      <!-- 画像アップロード -->
      <div class="form-control">
        <%= form.label :image, "施設画像", class: "label" %>
        <%= form.file_field :image, class: "file-input file-input-bordered w-full" %>
      </div>

      <!-- 送信ボタン -->
      <div>
        <%= form.submit "施設を保存", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
