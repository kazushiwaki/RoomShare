<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">新規登録</h1>

    <%= form_with model: @user, local: true, class: "space-y-4" do |form| %>
      
      <!-- 名前の入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :name, "名前", class: "label w-auto" %>
          <% if @user.errors[:name].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @user.errors[:name].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.text_field :name, class: "input input-bordered w-full" %>
      </div>

      <!-- メールアドレスの入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :email, "メールアドレス", class: "label w-auto" %>
          <% if @user.errors[:email].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @user.errors[:email].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.email_field :email, class: "input input-bordered w-full" %>
      </div>

      <!-- パスワードの入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :password, "パスワード", class: "label w-auto" %>
          <% if @user.errors[:password].any? %>
            <p class="text-red-500 text-sm ml-2">
              <% @user.errors[:password].each do |message| %>
                <%= message %>
              <% end %>
            </p>
          <% end %>
        </div>
        <%= form.password_field :password, class: "input input-bordered w-full" %>
      </div>

      <!-- パスワード確認の入力フィールド -->
      <div class="form-control">
        <div class="flex items-center">
          <%= form.label :password_confirmation, "パスワード確認", class: "label w-auto" %>
          <% if @user.errors[:password_confirmation].any? %>
            <p class="text-red-500 text-sm ml-2">
                <%= @user.errors[:password_confirmation].first %>
            </p>
          <% end %>
        </div>
        <%= form.password_field :password_confirmation, class: "input input-bordered w-full" %>
      </div>

      <div>
        <%= form.submit '登録', class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
