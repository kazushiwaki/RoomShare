<div id="flash-messages" class="fixed top-0 left-1/2 transform -translate-x-1/2 mt-4 z-50">
  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md mb-2">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-md mb-2">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-sm p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">ログイン</h1>
    <%= form_with model: @user, url: login_path, local: true, class: "space-y-4" do |form| %>
      <div class="form-control">
        <%= form.label :email, "メールアドレス", class: "label" %>
        <%= form.email_field :email, class: "input input-bordered w-full" %>
      </div>
      <div class="form-control">
        <%= form.label :password, "パスワード", class: "label" %>
        <%= form.password_field :password, class: "input input-bordered w-full" %>
      </div>
      <div>
        <%= form.submit 'ログイン', class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
